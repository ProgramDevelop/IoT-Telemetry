@{
    ViewData["Title"] = "Sensor Controller";
}
@model Telemetry.Web.ViewModels.Sensor.SensorViewModel

<form asp-action="Create" asp-controller="Sensor" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Name">Название датчика</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Description">Описание датчика</label><br />
            <input asp-for="Description" />
            <span asp-validation-for="Description" />
        </div>
        <div>
            <input type="submit" value="Создать" />
        </div>
    </div>
</form>